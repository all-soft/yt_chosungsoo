<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_margin="3dp"
    android:background="@color/White">

    <LinearLayout
        android:id="@+id/btn_singer_thumb_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_gravity="center_horizontal"
            tools:background="#ff0000">

            <ImageView
                android:id="@+id/iv_singer_thumb_start"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="#00666666"/>

            <ImageView
                android:id="@+id/iv_selected_singer_thumb_start"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:visibility="gone"
                android:background="@drawable/xml_select_singer_selected_image"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_singer_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:textColor="#4c4c4c"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="나훈아"
            tools:visibility="visible" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_singer_thumb_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_gravity="center_horizontal"
            tools:background="#ff0000">

            <ImageView
                android:id="@+id/iv_singer_thumb_end"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="#00666666"/>

            <ImageView
                android:id="@+id/iv_selected_singer_thumb_end"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:visibility="gone"
                android:background="@drawable/xml_select_singer_selected_image"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_singer_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="26sp"
            android:textColor="#4c4c4c"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="나훈아"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
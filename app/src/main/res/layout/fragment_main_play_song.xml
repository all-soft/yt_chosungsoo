<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202dp">

        <RelativeLayout
            android:id="@+id/layer_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            android:clickable="false">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="46dp" android:contentDescription="TODO"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ico_v_save"/>

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="46dp" android:contentDescription="TODO"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btn_save"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ico_v_share"/>

        </RelativeLayout>


    </RelativeLayout>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#000000"/>

    <RelativeLayout
        android:id="@+id/control_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/Black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_random"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_random"
                    android:layout_width="30dp" android:contentDescription="TODO"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_shuffle"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_repeat"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_repeat"
                    android:layout_width="30dp" android:contentDescription="TODO"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_repeat"/>

            </RelativeLayout>


            <ImageView
                android:id="@+id/previous_button"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="0.5"
                android:background="@drawable/ripple_borderless"
                android:clickable="true"
                android:contentDescription="TODO" android:focusable="true" android:src="@drawable/previous"
                />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="0.5"
                android:background="@drawable/ripple_borderless"
                android:clickable="true"
                android:contentDescription="TODO" android:focusable="true" android:src="@drawable/play"
                />

            <ImageView
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="0.5"
                android:background="@drawable/ripple_borderless"
                android:clickable="true"
                android:contentDescription="TODO" android:focusable="true" android:src="@drawable/next"
                />

            <RelativeLayout
                android:id="@+id/btn_save_mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="9dp"
                    android:textSize="15sp"
                    android:text="@string/change_save_mode"/>

                <ImageView
                    android:layout_width="8dp" android:contentDescription="TODO"
                    android:layout_height="11dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/tv_save"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ico_battery_off"/>

            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/layer_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:baselineAligned="false" android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tab_song"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_e9e9e9">

                <TextView
                    android:id="@+id/tv_song"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/list_of_video"
                    android:textColor="@color/Black"/>

                <View
                    android:id="@+id/line_song"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:background="@color/color_ffff00"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/White">

                <TextView
                    android:id="@+id/tv_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/list_of_review"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:id="@+id/line_review"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:background="@color/color_ffff00"/>
            </RelativeLayout>

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layer_tab">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@color/colorPrimary"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="@drawable/xml_switch_background_white">

            <Switch
                android:id="@+id/switch_alarm"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:checked="true" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/White"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="119dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/nav_singers"
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="18dp" android:contentDescription="TODO"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ico_leftmenu_01_favorite" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="58dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:text="@string/left_menu_1"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_next_screen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="58dp"
                    android:background="#dedede" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nav_share"
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="22dp" android:contentDescription="TODO"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/podcast" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="58dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:text="@string/left_menu_2"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_next_screen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="58dp"
                    android:background="#dedede" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nav_search"
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="17dp" android:contentDescription="TODO"
                        android:layout_height="17dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ico_leftmenu_03_search" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="58dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:text="@string/left_menu_3"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_next_screen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="58dp"
                    android:background="#dedede" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nav_resize_font"
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="16dp" android:contentDescription="TODO"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ico_leftmenu_04_scale" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="58dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:text="@string/left_menu_4"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_next_screen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="58dp"
                    android:background="#dedede" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nav_auto_stop"
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="18dp" android:contentDescription="TODO"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ico_leftmenu_05_timer" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="58dp"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.02"
                    android:text="@string/left_menu_5"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <View
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_next_screen" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="#f5f5f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/nav_give_grade"
                    android:layout_width="match_parent"
                    android:layout_height="66dp">

                    <RelativeLayout
                        android:layout_width="58dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="16dp" android:contentDescription="TODO"
                            android:layout_height="16dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ico_leftmenu_06_star" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="58dp"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.02"
                        android:text="@string/left_menu_6"
                        android:textColor="#555555"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="9dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/ic_next_screen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="58dp"
                        android:background="#dedede" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_another_app"
                    android:layout_width="match_parent"
                    android:layout_height="66dp">

                    <RelativeLayout
                        android:layout_width="58dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="18dp" android:contentDescription="TODO"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ico_leftmenu_07_music" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="58dp"
                        android:gravity="center_vertical"
                        android:letterSpacing="-0.02"
                        android:text="@string/left_menu_7"
                        android:textColor="#555555"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="9dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/ic_next_screen" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

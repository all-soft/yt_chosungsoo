<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layer_bg"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="3dp"
    android:background="@color/White">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="120dp" android:contentDescription="TODO"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/view_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_thumbnail"
        android:layout_toStartOf="@id/btn_save"
        android:clickable="false"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/color_2c2c2c"
        tools:text="나훈아 노래 모음 30곡"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_888888"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="5dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/layer_youtube_player"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:clickable="false"
        tools:background="#ff0000">

    </RelativeLayout>

    <View
        android:id="@+id/layer_youtube_player_click"
        android:layout_width="70dp" android:focusable="true" 
        android:layout_height="match_parent"
        android:clickable="true"/>

    <LinearLayout
        android:id="@+id/layer_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            tools:background="@drawable/pause" android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="40dp" android:contentDescription="TODO"
            android:layout_height="40dp"
            android:background="@drawable/close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:layout_toEndOf="@id/layer_youtube_player"
        android:layout_toStartOf="@id/layer_btn">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:gravity="center_vertical"
            tools:text="종이배"/>
    </LinearLayout>


</RelativeLayout>
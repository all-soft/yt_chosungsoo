<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layer_bg"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/White">

    <View
        android:id="@+id/layer_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88bbbbbb"/>


    <RelativeLayout
        android:id="@+id/layer_thumb"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:background="@color/Black">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#44000000" />

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="15sp"
            android:text=""
            android:background="@color/Black"
            tools:text="1000"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/layer_thumb"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/layer_btn_save"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/btn_save"
                android:layout_width="46dp"
                android:layout_height="36dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/btn_ico_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    tools:visibility="visible"
                    android:background="@color/colorPrimary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/Save"
                        android:background="@color/White"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/btn_ico_delete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:visibility="gone"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_delete"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_playcount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/btn_save"
                tools:text="100,000 재생됨"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layer_btn_save"
            android:clickable="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#5f5f5f"
            android:textStyle="bold"
            tools:text="나훈아 노래 모음 30곡"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"/>

</RelativeLayout>
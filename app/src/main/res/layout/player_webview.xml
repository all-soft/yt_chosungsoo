<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/web_player_ll"
    android:layout_width="300dp"
    android:layout_height="285dp"
    tools:background="#ff0000">

    <FrameLayout
        android:id="@+id/web_player_frame"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/layer_white"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:background="@color/White"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/top_control"
                layout="@layout/view_floating_player_top_control"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible"/>

            <RelativeLayout
                android:id="@+id/view_to_hide"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@id/top_control"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:visibility="visible">

            </RelativeLayout>

            <View
                android:id="@+id/btn_to_normal"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@id/top_control"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="180dp"
                android:background="#00000000"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"/>

            <include
                android:id="@+id/bottom_control"
                layout="@layout/view_floating_player_bottom_control"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:layout_below="@id/seekBar"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/layer_buttons"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/bottom_control"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:orientation="horizontal"
                android:background="@drawable/xml_bottom_edge_ffffff">

                <RelativeLayout
                    android:id="@+id/btn_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#0c0c0c"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="4sp"
                        android:layout_centerInParent="true"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/btn_favorite_off"
                        android:text="@string/Favorite"/>

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="#d7d7d7"/>

                <RelativeLayout
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#0c0c0c"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="4sp"
                        android:layout_centerInParent="true"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/ico_share_3"
                        android:text="@string/DoShare"/>

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="#d7d7d7"/>

                <RelativeLayout
                    android:id="@+id/btn_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#0c0c0c"
                        android:letterSpacing="-0.02"
                        android:lineSpacingExtra="4sp"
                        android:layout_centerInParent="true"
                        android:drawablePadding="3dp"
                        android:drawableStart="@drawable/ico_more"
                        android:text="@string/More"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</LinearLayout>